<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="me.graduation.domain.model.user.User" table="gr_user">
        <id name="id" column="id" length="32" type="java.lang.String">
            <generator class="uuid"/>
        </id>
        <property name="username" column="username" length="32"/>
        <property name="password" column="password" length="32"/>
        <property name="sex" column="sex"/>
        <property name="qq" column="qq" length="20"/>
        <property name="email" column="email" length="32"/>
        <property name="telphone" column="telphone" length="11"/>
        <property name="idCard" column="id_card" length="18"/>
        <property name="remark" column="remark" length="255"/>

        <set name="roles" table="gr_user_role">
            <key column="user_id"/>
            <many-to-many class="me.graduation.domain.model.role.Role" column="role_id"/>
        </set>

    </class>
</hibernate-mapping>